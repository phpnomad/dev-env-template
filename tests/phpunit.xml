<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="bootstrap.php"
         colors="true"
         stopOnError="false"
         stopOnFailure="false">
    <testsuites>
        <testsuite name="phpnomad">
            <directory suffix=".php">./Integration/Tests</directory>
        </testsuite>
    </testsuites>
    <listeners>
        <listener class="\Mockery\Adapter\Phpunit\TestListener"/>
    </listeners>
</phpunit>
